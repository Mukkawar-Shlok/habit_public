<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Habit Tracker</title>
</head>

<body>
    <!-- navbar -->
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="https://habit-cntest.onrender.com/">
            <img src="/images/logo.webp" width="30" height="30" class="d-inline-block align-top" alt="">
            Habit Tracker
        </a>
    </nav>
    <!-- navbar end -->

    <div class="row mt-2 d-flex justify-content-center">
        <!-- create habit section -->
        <div class="col-sm-12 col-md-5 col-lg-5 mt-2">
            <div class="card">
                <div class="card-header">
                    Create Habit
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="Habit">Enter Habit</label>
                            <input type="text" class="form-control" id="habitInput" placeholder="Workout...">
                        </div>
                        <button type="button" class="btn btn-success" id="submit">Create</button>
                    </form>

                </div>
            </div>
        </div>
        <!-- create habit section end -->
        <!-- Existing HABITS -->
        <div class="col-sm-12 col-md-5 col-lg-5 mt-2 ">
            <div class="card">
                <div class="card-header">
                    HABITS
                </div>
                <div class="card-body" id="habitSection">
                    <% for (let i=0; i < habit.length; i++) { %>
                        <a class="btn btn-info m-2 w-50 item-habit"
                            href="https://habit-cntest.onrender.com/habit/?id=<%=habit[i]._id%>">
                            <%= habit[i].name %>
                        </a>

                        <button class="btn btn-danger m-2 w-20 item-delete" value="<%=habit[i]._id %>">
                            <span>Delete</span>
                        </button>

                        <% } %>
                </div>
            </div>
        </div>

        <!-- Existing HABITS end -->

    </div>


</body>

</html>

