<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>HABIT | <%=habitArray.name%>
    </title>
</head>

<body>
    <!-- navbar -->
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="https://habit-cntest.onrender.com/">
            <img src="/images/logo.webp" width="30" height="30" class="d-inline-block align-top" alt="">
            Habit Tracker
        </a>
    </nav>
    <!-- navbar end -->

    <!-- Habit card -->
    <div class="row d-flex justify-content-center mt-2">
        <div class="col-8 ">
            <div class="card mb-2">
                <div class="card-header">
                    TODAY'S STATUS <%=preWeekday[preWeekday.length-1] %>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled" id="topEle">
                        <%let entry=false%>
                            <% for (let i=0; i < habitArray.dates.length; i++) { %>
                                <%if(habitArray.dates[i].date==preWeekday[preWeekday.length-1]){%>
                                    <%entry=true%>
                                        <% if (habitArray.dates[i].status==='none' ) { %>
                                            <button type="button" class="btn btn-secondary item-btn"
                                                value="<%= habitArray.dates[i].date %>"
                                                habitId="<%= habitArray._id %>">STATUS:NONE</button>
                                            <% } else if (habitArray.dates[i].status==='Done' ) { %>
                                                <button type="button" class="btn btn-success item-btn"
                                                    value="<%= habitArray.dates[i].date %>"
                                                    habitId="<%= habitArray._id %>">Done</button>
                                                <% } else { %>
                                                    <button type="button" class="btn btn-danger item-btn"
                                                        value="<%= habitArray.dates[i].date %>"
                                                        habitId="<%= habitArray._id %>">Not Done</button>
                                                    <% } %>
                                                        <% } %>

                                                            <% } %>
                                                                <%if(!entry){%>
                                                                    <button type="button"
                                                                        class="btn btn-secondary item-btn"
                                                                        value="<%= preWeekday[preWeekday.length-1] %>"
                                                                        habitId="<%= habitArray._id %>">STATUS:NONE</button>
                                                                    <%}%>
                    </ul>
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <%= habitArray.name%> WEEKLY
                </div>
                <div class="card-body">
                    <ul id="dateList" class="list-unstyled">
                        <% for (let i=0; i < preWeekday.length; i++) { %>
                            <li>
                                <%= preWeekday[i] %>
                                    <% const matchingHabitDate=habitArray.dates.find(dateObj=> dateObj.date ===
                                        preWeekday[i]); %>
                                        <% if (matchingHabitDate) { %>
                                            <% const status=matchingHabitDate.status; %>
                                                <% if (status==='none' ) { %>
                                                    <button type="button" class="btn btn-secondary item-btn"
                                                        value="<%= matchingHabitDate.date %>"
                                                        habitId="<%= habitArray._id %>">STATUS:NONE</button>
                                                    <% } else if (status==='Done' ) { %>
                                                        <button type="button" class="btn btn-success item-btn"
                                                            value="<%= matchingHabitDate.date %>"
                                                            habitId="<%= habitArray._id %>">Done</button>
                                                        <% } else { %>
                                                            <button type="button" class="btn btn-danger item-btn"
                                                                value="<%= matchingHabitDate.date %>"
                                                                habitId="<%= habitArray._id %>">Not Done</button>
                                                            <% } %>
                                                                <% } else { %>
                                                                    <button type="button"
                                                                        class="btn btn-secondary item-btn"
                                                                        value="<%= preWeekday[i] %>"
                                                                        habitId="<%= habitArray._id %>">STATUS:NONE</button>
                                                                    <% } %>
                            </li>
                            <hr>
                            <% } %>
                    </ul>

                </div>
            </div>
        </div>
    </div>

    <!-- Habit card end -->


</body>

</html>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
<script src="/js/habit.js"></script>